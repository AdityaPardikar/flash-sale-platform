{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/__tests__/**/*.ts"]
}
